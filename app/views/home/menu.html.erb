<%= render 'home/menu_slider' %>
<!-- Start Restaurant Menu -->
<section id="mu-restaurant-menu">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="mu-restaurant-menu-area">
          <div class="mu-title">
            <span class="mu-subtitle">Menu</span>
          </div>
          <div class="mu-restaurant-menu-content">
            <div class="nav nav-tabs mu-restaurant-menu-sort">
              <select name="" id="sort-general">
                <option value="0">Alphabetical</option>
                <option value="1">Price low to high</option>
                <option value="2">Price high to low</option>
              </select>
            </div>
            <ul class="nav nav-tabs mu-restaurant-menu">
              <% @sections.each do |section| %>
                <li><%= link_to section.name, "#", "data-target": "\##{section.name}",
                        class: "nav-link" %></li>
              <% end %>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
              <% Section.all.each do |section| %>
                <div class="tab-pane fade in" id="<%= section.name %>">
                  <div class="mu-tab-content-area">
                    <div class="row">
                      <div class="col-md-6">
                        <div class="mu-tab-content-left">
                          <ul class="mu-menu-item-nav">
                            <li>
                              <% FoodItem.where(["section_id = ?", section]).each do |item| %>
                                <div class="media">
                                  <div class="media-left">
                                    <a href="#">
                                      <img class="media-object" src="assets/menu/item-1.jpg" alt="img">
                                    </a>
                                  </div>
                                  <div class="media-body">
                                    <h4 class="media-heading"><a href="#"> <%= item.name.upcase %></a></h4>
                                    <span class="mu-menu-price"><%= item.price %></span>
                                    <p><%= @markdown.render(item.description).html_safe %></p>
                                  </div>
                                </div>
                              <% end %>
                            </li>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- End #{section.name} tab -->
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End Restaurant Menu -->
