<%= render 'home/menu_slider' %>
<!-- Start Restaurant Menu -->
<section id="mu-restaurant-menu">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="mu-restaurant-menu-area">
          <div class="mu-title">
            <span class="mu-subtitle">Menu</span>
          </div>
          <div class="mu-restaurant-menu-content">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Rankingz <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <!-- We are passing the sort parameter here -->
                <li><a class = "menu-sort" key="sort" value="originality">Originality</a></li>
                <li><a class = "menu-sort" key="sort" value="originality">Dynamics</a></li>
                <li><a class = "menu-sort" key="sort" value="originality">Execution</a></li>
                <li><a class = "menu-sort" key="sort" value="originality">Battle</a></li>
                <li><a class = "menu-sort" key="sort" value="originality">Votes</a></li>
              </ul>
            </li>
            <form class="form-inline pull-xs-right">
              <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search" %>
            <%= submit_tag "Search", :name => nil, :class => "btn btn-outline-success" %>
            </form>
            <ul class="nav nav-tabs mu-restaurant-menu">
              <% @sections.each do |section| %>
                <li><%= link_to section.name, menu_path(section: section.id),
                        class: "nav-link" %></li>
              <% end %>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
              <% @fooditems.each do |item| %>
                <div class="mu-tab-content-area">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="mu-tab-content-left">
                        <ul class="mu-menu-item-nav">
                          <li>
                            <div class="media">
                              <div class="media-left">
                                <a href="#">
                                  <img class="media-object" src="assets/menu/item-1.jpg" alt="img">
                                </a>
                              </div>
                              <div class="media-body">
                                <h4 class="media-heading"><a href="#"> <%= item.name.upcase %></a></h4>
                                <span class="mu-menu-price"><%= item.price %></span>
                                <p><%= @markdown.render(item.description).html_safe %></p>
                              </div>
                            </div>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End Restaurant Menu -->
