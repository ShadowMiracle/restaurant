<ul class="mu-menu-item-nav">
  <li>
    <div class="media">
      <div class="media-left">
        <%= image_tag("drink/#{@food_item.image_url}_lg.png", size: "225x300", class: "media-object")%>
      </div>

      <div class="media-body">
        <!-- Food info section -->
        <div class="col-md-5">
          <h4 class="media-heading">
            <a href="#"> <%= @food_item.name %></a>
          </h4>

          <p><%= @food_item.description %></p>
          <p class="mu-menu-price"><strong>Price: </strong><%= number_to_currency @food_item.price/1000, :precision => 0 %></p>
        </div>
        <!-- End food info section -->

        <!-- Start comment section -->
        <div class="col-md-7">
          <div class="box">
            <!-- /.box-body -->
            <div class="box-footer box-comments">
              <% if @food_item.comments.size == 0 %>
                <div class="comment-text">No review yet</div>
              <% else %>
                <%= render @food_item.comments %>
              <% end %>
            </div>
            <!-- /.box-footer -->
            <div class="box-footer">
              <form action="#" method="post">
                <%= image_tag("avatar/user4-128x128.jpg", size: "45x45", class: "img-circle img-sm") %>
                <!-- .img-push is used to add margin to elements next to floating images -->
                <div class="img-push">
                  <input type="text" class="form-control input-sm" placeholder="Press enter to post comment">
                </div>
              </form>
            </div>
            <!-- /.box-footer -->
          </div>
          <!-- End comment section -->
        </div>
      </div>
    </div>
  </li>
</ul>

