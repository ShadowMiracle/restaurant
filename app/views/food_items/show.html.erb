<ul class="mu-menu-item-nav">
  <li>
    <div class="media">
      <div class="media-left">
        <%= image_tag("drink/#{@food_item.image_url}_lg.png", size: "225x300", class: "media-object")%>
      </div>

      <div class="media-body">
        <!-- Food info section -->
        <div class="col-xs-5">
          <h4 class="media-heading">
            <a href="#"> <%= @food_item.name %></a>
          </h4>

          <p><%= @food_item.description %></p>
          <p class="mu-menu-price"><strong>Price: </strong><%= number_to_currency @food_item.price/1000, :precision => 0 %></p>
          <p class="mu-menu-price inline"><strong>Average Star: </strong><%=number_with_precision @food_item.average_star, :precision => 1 %>/5<i class="fa fa-star" style="color: #f39c12"></i></p>
        </div>
        <!-- End food info section -->

        <!-- Start comment section -->
        <div class="col-xs-7">
          <div class="box">
            <!-- /.box-body -->
            <div class="box-footer box-comments">
              <% @comments = @food_item.comments %>
              <%= render @comments %>
            </div>
            <!-- /.box-footer -->
            <%= render "comments/form"%>
          </div>
          <!-- End comment section -->
        </div>
      </div>
    </div>
  </li>
</ul>

