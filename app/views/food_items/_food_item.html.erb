<li>
  <div class="media">
    <div class="media-left">
      <%= link_to food_item_path(food_item.id), class: "menu-order", "data-toggle": "modal", "data-target": "#myModal" do %>
        <%= image_tag("drink/#{food_item.image_url}_m.png", size: "230x175", class: "media-object")%>
      <% end %>
    </div>

    <div class="media-body">
      <h4 class="media-heading">
        <a href="#"> <%= food_item.name %></a>
        <span class="mu-menu-price pull-right"><%= number_to_currency food_item.price/1000, :precision => 0 %></span>
      </h4>

      <p><%= food_item.description %></p>
      <%= food_item.impressionist_count(:filter=>:session_hash) %>  <i class="fa fa-eye"></i>
      <%= form_for @order_item, remote: true do |f| %>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control order-number", min: 1 %>
          <div class="input-group-btn">
            <%= f.hidden_field :food_item_id, value: food_item.id %>
            <%= f.submit "Order", class: "btn btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</li>
